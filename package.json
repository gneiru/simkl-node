{
  "name": "simkl-node",
  "version": "0.1.1",
  "author": "Rohi <n@rohi.dev>",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gneiru/simkl-node.git"
  },
  "exports": {
    "./simkl": {
      "default": "./dist/simkl/index.js",
      "types": "./dist/simkl/index.d.ts"
    },
    "./anime": {
      "default": "./dist/anime/index.js",
      "types": "./dist/anime/index.d.ts"
    },
    "./types": {
      "default": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "fmt": "pnpm biome format . --write && pnpm biome check . --apply-unsafe",
    "build": "rm -rf dist && tsup",
    "lint": "tsc",
    "release": "pnpm run build && changeset publish"
  },
  "keywords": [
    "simkl",
    "anime",
    "api",
    "node"
  ],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.7.1",
    "@changesets/cli": "^2.27.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
}
